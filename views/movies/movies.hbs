<h2>Movies</h2>

{{#each movies}}
<div>
    <h3>{{title}}</h3>
    <p>Genre: {{genre}}</p>
    <a href="/movies/{{_id}}">See details</a> <!-- point to details page -->
    <a href="/movies/{{_id}}/edit">Edit</a>
    <form action="/movies/{{_id}}/delete" method="post">
        <button type="submit">Delete</button>
    </form>
</div>
{{/each}}


