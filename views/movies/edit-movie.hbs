<!-- title, genre, plot, cast -->

<h2>Edit the movie: {{movie.title}}</h2>

<form action="/movies/{{movie._id}}/edit" method="post">
<label>Title:
    <input type="text" name="title" value="{{movie.title}}"/>
    </label>
<label>genre:
    <input type="text" name="genre" value="{{movie.genre}}"/>
</label>
<label>Plot:
    <textarea name="plot" cols="20" rows="1">
        {{movie.plot}}
    </textarea>
</label>
<label>Cast:
    <textarea name="cast" cols="20" rows="1">
        {{movie.cast}}
    </textarea>
</label>

    <button type="submit">Save Changes</button>
</form>